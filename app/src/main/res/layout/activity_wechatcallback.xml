<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bodekjan.uyweather.activities.AddCityActivity"
    android:background="#f0f0f0"
    android:gravity="center_horizontal">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/holo_blue_light"
        android:layout_height="49dp">
        <com.mikepenz.iconics.view.IconicsImageView
            android:visibility="invisible"
            android:id="@+id/backarrow"
            style="@style/HeaderAdd"
            app:iiv_color="@color/iconcolor"
            app:iiv_icon="gmi-arrow-left" />
        <np.TextView
            style="@style/HeaderTitle"
            android:textColor="@color/textcolor"
            android:text="@string/wechat_title"
            android:id="@+id/citytitle"
            android:gravity="center" />
        <com.mikepenz.iconics.view.IconicsImageView
            android:visibility="invisible"
            android:id="@+id/citymenu"
            style="@style/HeaderAdd"
            app:iiv_color="@color/iconcolor"
            app:iiv_icon="gmi-menu" />
    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/shareresultimage"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp" />

    <np.TextView
        style="@style/ALKATIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/shareresulttext"
        android:layout_margin="20dp" />
    <np.Button
        style="@style/SubmitButtonStyle"
        android:layout_margin="10dp"
        android:text="@string/button_back"
        android:id="@+id/backsetting" />

</LinearLayout>
